{
  "name": "static-website-boilerplate",
  "version": "0.1.0",
  "description": "Static website boilerplate using es6, scss, bootstrap 4 and yarn scripts.",
  "main": "index.js",
  "author": "Luke Thompson <hello@lukethompson.dev>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "mkdirs": "mkdir -p dist/js && mkdir -p dist/css && mkdir -p dist/assets",
    "copy:assets": "cp -r src/assets/* dist/assets",
    "copy:html": "find src -name '*.html' -type f -exec cp {} dist \\;",
    "copy": "run-s copy:*",
    "prebuild:dev": "run-s clean mkdirs copy",
    "build:dev": "run-s lint-css css:dev css:autoprefixer lint js:dev",
    "hash": "hashmark **/(app|vendor).* -d md5 -l 8 -c dist '{dir}/{name}.{hash}{ext}' | replaceinfiles -S -s dist/**/*.html",
    "posthash": "rm dist/css/index.css && rm dist/js/bundle.js",
    "css:dev": "node-sass --include-path node_modules src/scss/index.scss --output-style compressed -o dist/css/",
    "css:prod": "node-sass --include-path node_modules src/scss/index.scss --output-style compressed -o dist/css/",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "js:dev": "browserify src/index.js -t babelify --outfile dist/js/bundle.js",
    "js:prod": "browserify src/index.js -t babelify --outfile dist/js/bundle.js",
    "lint": "eslint src",
    "lint-css": "stylelint src/scss/*.scss --syntax scss",
    "kill": "lsof -n -i:8080 | grep LISTEN | awk '{print $2}' | xargs kill -9",
    "preserve": "run-s build:dev kill",
    "serve": "run-p browsersync watch",
    "browsersync": "browser-sync start -s --files 'dist/**/*.(js|css|html)' --ss 'dist' --port 8080 --reload-debounce 500",
    "watch:assets": "onchange 'assets/**/*' -- npm run copy:assets",
    "watch:vendor": "onchange 'vendor/**/*.js' -- npm run js:vendor",
    "watch:html": "onchange 'src/**/*.html' -- npm run copy:html",
    "watch:css": "onchange 'src/**/*.scss' -- npm run css:dev",
    "watch:js": "onchange 'src/**/*.js' -- npm run js:dev",
    "watch": "run-p watch:css watch:js watch:html watch:assets"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.4",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babelify": "^8.0.0",
    "browser-sync": "^2.24.5",
    "browserify": "^16.2.2",
    "eslint": "^5.0.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "hashmark": "^5.0.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.0.0",
    "postcss-cli": "^5.0.1",
    "replaceinfiles": "^1.1.4",
    "rimraf": "^2.6.2",
    "stylelint": "^9.3.0"
  },
  "dependencies": {
    "bootstrap": "^4.1.1"
  }
}
